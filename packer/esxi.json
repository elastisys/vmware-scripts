      }
    ],
    "provisioners": [{
      "type": "shell",
      "inline": [
          "sudo apt update",
          "sudo apt upgrade -y"
          ]
  },
  {
      "type": "shell",
      "script": "scripts/network/network.sh",
      "execute_command": "chmod +x {{.Path}}; sudo {{.Path}}"
  },
  {
      "type": "shell",
      "script": "scripts/config/init-config.sh",
      "execute_command": "chmod +x {{.Path}}; {{.Path}}"
  },

  {
      "type": "file",
      "source":"./setup",
      "destination":"/tmp/"
  },
  {
      "type": "shell",
      "inline": [
          "chmod +x /tmp/setup/setup.sh",
          "cd /tmp/setup",
          "./setup.sh"
      ]
  },

  {
      "type": "shell",
      "script": "scripts/cleanup/cleanup.sh",
      "execute_command": "chmod +x {{.Path}}; sudo {{.Path}}"
  }
  ],
